---
import '../styles/main.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---


<!DOCTYPE html>
<html lang="en" class="dark:bg-neutral-900 bg-neutral-100">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-neutral-100 dark:bg-neutral-900 text-neutral-800 dark:text-neutral-50 h-full">
		<slot />
	</body>
</html>