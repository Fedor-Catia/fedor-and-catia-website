---
const {time, header, body } = Astro.props;
---
    <li class="mb-4 ml-4">
        <div class="absolute w-3 h-3 bg-neutral-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-neutral-900 dark:bg-neutral-700"></div>
        <time class="mb-1 text-sm font-normal leading-none text-neutral-400 dark:text-neutral-500">
            {time}
        </time>
        <div class="mt-2">
            <h3 class="text-lg font-semibold text-neutral-900 dark:text-white">
                {header}
            </h3>
            <p class="mb-4 text-base font-normal text-neutral-500 dark:text-neutral-400">
                {body}
            </p>
        </div>
    </li>